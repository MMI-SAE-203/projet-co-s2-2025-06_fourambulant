---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <main class="flex items-center justify-center min-h-screen ">
        <div class="bg-[#fef1d8] p-8 rounded shadow-lg w-[400px] max-w-full">
            <h1 class="text-xl font-bold mb-4">Connexion</h1>
            <hr class="mb-4 border-gray-300" />

            <!-- Boutons de connexion Google/Facebook (non fonctionnels ici) -->
            <div class="flex justify-center gap-4 mb-6">
                <img
                    src="/src/assets/icons/google.svg"
                    alt="Connexion Google"
                    class="w-10 h-10 cursor-pointer"
                />
                <img
                    src="/src/assets/icons/facebook_connexion.svg"
                    alt="Connexion Facebook"
                    class="w-10 h-10 cursor-pointer"
                />
            </div>

            <!-- Formulaire -->
            <form id="loginForm" class="space-y-4">
                <input
                    type="email"
                    name="email"
                    placeholder="Adresse mail"
                    class="w-full px-4 py-2 border rounded-md outline-none"
                    required
                />
                <input
                    type="password"
                    name="password"
                    placeholder="Mot de passe"
                    class="w-full px-4 py-2 border rounded-md outline-none"
                    required
                />

                <label
                    class="flex items-center space-x-2 text-gray-600 text-sm"
                >
                    <input type="checkbox" name="remember" class="w-4 h-4" />
                    <span>Rester connecté</span>
                </label>

                <button
                    type="submit"
                    class="bg-orange-400 hover:bg-orange-500 text-white px-4 py-2 rounded-md float-right"
                    >Confirmer</button
                >
            </form>

            <!-- Lien vers l'inscription -->
            <p class="mt-6 text-center text-sm text-gray-600">
                Pas de compte ?
                <a href="/inscription" class="underline text-gray-800"
                    >Inscrivez-vous dès maintenant</a
                >
            </p>
        </div>

        <script type="module">
            document
                .querySelector("#loginForm")
                .addEventListener("submit", async (e) => {
                    e.preventDefault();
                    const form = e.target;
                    const email = form.email.value;
                    const password = form.password.value;

                    try {
                        const res = await fetch(
                            "http://127.0.0.1:8090/api/collections/client/auth-with-password",
                            {
                                method: "POST",
                                headers: { "Content-Type": "application/json" },
                                body: JSON.stringify({
                                    identity: email,
                                    password,
                                }),
                            },
                        );

                        if (!res.ok) throw new Error("Identifiants incorrects");
                        const data = await res.json();
                        alert("Connexion réussie !");
                        console.log(data); // Tu peux sauvegarder le token ou rediriger ici
                    } catch (err) {
                        alert("Erreur : " + err.message);
                    }
                });
        </script>
    </main>
</Layout>
