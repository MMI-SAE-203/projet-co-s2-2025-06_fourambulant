---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <main class="bg-[#FFF3D6] text-center py-10">
        <h1 class="text-3xl font-bold">Reservation</h1>
        <p class="mt-2">Passer votre reservation ci-dessous</p>
    </main>

    <section class="max-w-2xl mx-auto mt-10 px-4">
        <!-- Récapitulatif -->
        <div class="bg-orange-500 text-white rounded-md shadow-md p-6 mb-10">
            <h2 class="font-bold text-lg mb-4">Récapitulatif de paiement</h2>
            <div class="flex justify-between border-t border-white py-4">
                <span>Pain au Levain</span>
                <span>x 1</span>
            </div>
            <div class="text-right space-y-1">
                <p>Prix du produit : ...</p>
                <p>Frais de livraison : ...</p>
                <p class="font-bold">Total : ...</p>
            </div>
        </div>

        <!-- Paiement -->
        <div class="bg-[#FFF3D6] rounded-md shadow-md p-6 mb-10">
            <h2 class="font-semibold text-lg mb-4">Mode de payement</h2>

            <form class="space-y-4">
                <input
                    type="text"
                    placeholder="Numéro de carte"
                    class="w-full p-3 border rounded-md"
                />
                <div class="flex gap-4">
                    <input
                        type="text"
                        placeholder="Date d’expiration  jj/mm/aaaa"
                        class="w-1/2 p-3 border rounded-md"
                    />
                    <input
                        type="text"
                        placeholder="Cryptogramme"
                        class="w-1/2 p-3 border rounded-md"
                    />
                </div>
                <input
                    type="text"
                    placeholder="Titulaire de la carte"
                    class="w-full p-3 border rounded-md"
                />
                <input
                    type="text"
                    placeholder="Adresse"
                    class="w-full p-3 border rounded-md"
                />
                <div class="flex gap-4">
                    <input
                        type="text"
                        placeholder="Nom"
                        class="w-1/2 p-3 border rounded-md"
                    />
                    <input
                        type="text"
                        placeholder="Prénom"
                        class="w-1/2 p-3 border rounded-md"
                    />
                </div>
                <div class="flex gap-4">
                    <input
                        type="text"
                        placeholder="Pays"
                        class="w-1/2 p-3 border rounded-md"
                    />
                    <input
                        type="text"
                        placeholder="Département"
                        class="w-1/2 p-3 border rounded-md"
                    />
                </div>
            </form>
        </div>

        <!-- Adresse livraison -->
        <div class="bg-[#FFF3D6] rounded-md shadow-md p-6 mb-10">
            <h2 class="font-semibold text-lg mb-4">Réservation</h2>

            <label class="flex items-center mb-2">
                <input type="checkbox" checked class="mr-2" />
                <span class="font-semibold">Maison</span>
            </label>
            <input
                type="text"
                placeholder="Adresse"
                class="w-full p-3 border rounded-md mb-2"
            />
            <input
                type="text"
                placeholder="Numéro de rue"
                class="w-full p-3 border rounded-md mb-4"
            />

            <label class="flex items-center mb-2">
                <input type="checkbox" class="mr-2" />
                <span class="font-semibold">Appartement</span>
            </label>
            <input
                type="text"
                placeholder="Adresse"
                class="w-full p-3 border rounded-md mb-2"
            />
            <div class="flex gap-4 mb-2">
                <input
                    type="text"
                    placeholder="Numéro de porte"
                    class="w-1/2 p-3 border rounded-md"
                />
                <input
                    type="text"
                    placeholder="Étage"
                    class="w-1/2 p-3 border rounded-md"
                />
            </div>
            <input
                type="text"
                placeholder="Interphone ? Oui / Non"
                class="w-full p-3 border rounded-md mb-2"
            />
            <textarea
                placeholder="Informations supplémentaire   Facultatif"
                class="w-full p-3 border rounded-md"></textarea>

            <h3 class="mt-6 mb-2 font-semibold">Option de reservation</h3>
            <select class="w-full p-3 border rounded-md">
                <option>Horaire proposée</option>
            </select>
        </div>

        <!-- CTA -->
        <div class="text-center mt-6">
            <a href="/remerciment">
                <button
                    class="bg-orange-500 text-white px-6 py-3 rounded-md font-semibold"
                >
                    Essayer BOULANGERIE+ gratuitement
                </button>
            </a>
            <p class="text-sm text-gray-600 mt-2 underline">
                <a href="/remerciment">Passer sans BOULANGERIE+</a>
            </p>
        </div>
    </section>
</Layout>
